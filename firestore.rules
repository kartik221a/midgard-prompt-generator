rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Users Collection
    match /users/{userId} {
      // Users can read their own profile
      // Admins can read all profiles
      allow read: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      
      // Users can create their own profile on signup
      allow create: if isSignedIn() && request.auth.uid == userId;
      
      // Admins can update data (e.g. blocking)
      // Users shouldn't typically update their own critical data via client, but can allow it if needed
      allow update: if isAdmin();
      
      // Admins can delete users
      allow delete: if isAdmin();
    }

    // Prompts Collection
    match /prompts/{promptId} {
      // Anyone can read (if public) or restrict to owner
      // For now, let's assume strict ownership
      allow read: if isSignedIn(); 
      // Note: In a real app you'd likely want: resource.data.userId == request.auth.uid
      
      // Users can create prompts
      allow create: if isSignedIn();
      
      // Users can delete their own prompts
      allow delete: if isSignedIn(); // Add ownership check: resource.data.userId == request.auth.uid;
    }
  }
}
